<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".HomeFragment">

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext_background"
        android:orientation="horizontal"
        android:padding="12dp"
        app:cornerRadius="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="@font/poppins_medium"
            android:hint="Search here.."
            android:inputType="text" />
    </LinearLayout>

    <!-- ImageView Frame -->
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="386dp"
        android:layout_height="232dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/frame1" />

    <!-- Icon Notifikasi -->
    <ImageView
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_notif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView Explore -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:background="#F8F6F6"
        android:backgroundTint="#F8F8F8"
        android:text="Explore"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold2"
        app:layout_constraintTop_toBottomOf="@id/imageView6"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Garis -->
    <View
        android:layout_width="379dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Label Categories -->
    <TextView
        android:layout_width="134dp"
        android:layout_height="30dp"
        android:background="@drawable/rounded_background"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="CATEGORIES"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Custom Card 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/customCard"
        android:layout_width="205dp"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_women" />

        <ImageView
            android:id="@+id/modelImage"
            android:layout_width="70dp"
            android:layout_height="180dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/women" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="WOMEN"
            android:textColor="#B55F4B"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <!-- Custom Card 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/customCard2"
        android:layout_width="205dp"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/customCard"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_kids" />

        <ImageView
            android:id="@+id/modelImage2"
            android:layout_width="131dp"
            android:layout_height="185dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/kids" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:text="KIDS"
            android:textColor="#3A342B"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <!-- Custom Card 3 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/customCard3"
        android:layout_width="160dp"
        android:layout_height="384dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/customCard"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_men" />

        <ImageView
            android:id="@+id/modelImage3"
            android:layout_width="148dp"
            android:layout_height="268dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/men" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:text="MEN"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

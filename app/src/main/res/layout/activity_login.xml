<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cae6f8"
    tools:context=".login">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="511dp"
        android:src="@drawable/ic_bag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="468dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="38dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.406">

        <TextView
            android:id="@+id/login_text"
            android:layout_width="104dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_marginBottom="160dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Login"
            android:textColor="#5993d2"
            android:textSize="38sp" />

        <LinearLayout
            android:id="@+id/usernameLayout"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp"
            android:background="@drawable/rounded_edittext_background"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="18dp"
                android:alpha="0.5"
                android:src="@drawable/ic_user" />

            <EditText
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:hint="Username" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/passwordLayout"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext_background"
            android:orientation="horizontal"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/usernameLayout">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="19dp"
                android:alpha="0.5"
                android:src="@drawable/ic_lock" />

            <EditText
                android:id="@+id/password"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginLeft="19dp"
                android:fontFamily="@font/poppins_medium"
                android:hint="Password"
                android:inputType="textPassword" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="110dp"
                android:alpha="0.5"
                android:src="@drawable/ic_invisible" />
        </LinearLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Reminder me next time"
            android:textColor="#3c3a3a"
            android:textSize="12sp" />

        <Switch
            android:id="@+id/reminderSwitch"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="128dp"/>

        <Button
            android:id="@+id/signup_button"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="114dp"
            android:backgroundTint="#5993d2"
            android:fontFamily="@font/poppins_semibold"
            android:text="Sign In"
            android:textColor="@color/white"
            app:cornerRadius="45dp" />

        <TextView
            android:id="@+id/subtext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="160dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Doesn't have an account?"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/SignIn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="172dp"
            android:layout_marginLeft="70dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppins_semibold"
            android:text="Sign In"
            android:textColor="#5993d2"
            android:textSize="15sp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
